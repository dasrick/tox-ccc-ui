{
  "name": "tox-ccc-ui",
  "version": "0.3.8",
  "description": "AngularJS frontend app for Customer Control Center of MovingImage24.",
  "main": "serve.js",
  "private": true,
  "author": "Enrico Hoffmann <dasrick@gmail.com>",
  "license": "propertieray",
  "engines": {
    "node": "0.12.*",
    "npm": "2.2.*"
  },
  "dependencies": {
    "express": "^4.13.1"
  },
  "devDependencies": {
    "airbrake": "~0.3.8",
    "angular": "^1.4.3",
    "angular-bootstrap": "^0.12.0",
    "angular-cache": "~4.3.1",
    "angular-gravatar": "^0.4.1",
    "angular-jwt": "~0.0.9",
    "angular-loading-bar": "^0.8.0",
    "angular-mocks": "^1.4.3",
    "angular-resource": "^1.4.3",
    "angular-sanitize": "^1.4.3",
    "angular-translate": "^2.7.2",
    "angular-translate-loader-partial": "^2.7.2",
    "angular-ui-router": "~0.2.15",
    "clean-css": "^3.3.5",
    "codacy-coverage": "^1.1.2",
    "david": "^6.1.6",
    "font-awesome": "^4.3.0",
    "fs-extra": "^0.24.0",
    "glob": "^5.0.13",
    "istanbul-instrumenter-loader": "^0.1.3",
    "jasmine-core": "^2.3.4",
    "jscs": "^2.0.0",
    "jshint": "^2.8.0",
    "jshint-stylish": "^2.0.1",
    "json-loader": "^0.5.2",
    "karma": "^0.13.3",
    "karma-coverage": "^0.5.2",
    "karma-jasmine": "^0.3.6",
    "karma-phantomjs-launcher": "^0.2.0",
    "karma-webpack": "^1.7.0",
    "less": "^2.5.1",
    "less-plugin-autoprefix": "^1.4.2",
    "mi-angular-alert-service": "^1.0.4",
    "mi24-bootstrap": "^0.3.1",
    "newrelic": "^1.22.0",
    "npm-font-open-sans-condensed": "0.0.2",
    "npm-font-source-sans-pro": "0.0.3",
    "ui-select": "^0.11.2",
    "watch": "^0.16.0",
    "webpack": "^1.12.1"
  },
  "scripts": {
    "preinstall": "npm cache clean && npm install bower",
    "postinstall": "npm run build",
    "prebuild": "mkdir -p web/css/ web/js/ web/views/ web/fonts/font-awesome web/fonts/source-sans-pro web/fonts/open-sans-condensed web/i18n",
    "build": "npm run build:css && npm run jscs && npm run jshint && npm run build:scripts && npm run build:views && npm run build:fonts && npm run build:i18n",
    "build:css": "lessc --autoprefix='last 2 versions,ie 9' src/media/less/style.less web/css/style.css && cleancss --source-map -o web/css/style.min.css web/css/style.css",
    "build:scripts": "webpack --module-bind json -d src/app.js web/js/app.js",
    "build:views": "node scripts/copy.js src/**/views/*.html web/views/",
    "build:fonts": "npm run build:font-fontawesome && npm run build:font-sourcesanspro && npm run build:font-opensanscondensed",
    "build:font-fontawesome": "cp -R node_modules/font-awesome/fonts/* web/fonts/font-awesome",
    "build:font-sourcesanspro": "cp -R node_modules/npm-font-source-sans-pro/fonts/* web/fonts/source-sans-pro",
    "build:font-opensanscondensed": "cp -R node_modules/npm-font-open-sans-condensed/fonts/* web/fonts/open-sans-condensed",
    "build:i18n": "node scripts/copy.js src/**/translations/*.json web/i18n/",
    "jscs": "jscs ./src ./tests ./scripts",
    "jshint": "jshint ./src ./tests ./scripts --reporter node_modules/jshint-stylish/index.js",
    "start": "node serve.js",
    "test": "export CODACY_REPO_TOKEN='6d0c32dbb8fe4543bee90b3b20c1d2e5' && npm run test:karma && cat ./coverage/report-lcov/lcov.info | ./node_modules/codacy-coverage/bin/codacy-coverage.js",
    "test:karma": "./node_modules/karma/bin/karma start karma.config.js",
    "watch": "npm run watch:copy & npm run watch:css & npm run watch:scripts",
    "watch:copy": "watch 'npm run build:copy' src/",
    "watch:css": "watch 'npm run build:css' src/media/less",
    "watch:scripts": "watch 'npm run build:scripts' src/"
  }
}
