  "license": "propertieray",
  "engines": {
    "node": "0.12.*",
    "npm": "2.2.*"
  },
  "browserify": {
    "transform": [
      "browserify-shim",
      "browserify-ngannotate"
    ]
  },
  "browserify-shim": {
    "angular": "angular"
  },
  "browser": {
    "angular": "./node_modules/angular/angular.js",
    "angular-jwt": "./node_modules/angular-jwt/dist/angular-jwt.js",
    "angular-mocks": "./node_modules/angular-mocks/angular-mocks.js",
    "angular-route": "./node_modules/angular-ui-router/release/angular-ui-router.js",
    "angular-sanitize": "./node_modules/angular-sanitize/angular-sanitize.js",
    "angular-translate": "./node_modules/angular-translate/dist/angular-translate.js",
    "angular-translate-loader-partial": "./node_modules/angular-translate/dist/angular-translate-loader-partial/angular-translate-loader-partial.js",
    "angular-resource": "./node_modules/angular-resource/angular-resource.js"
  },
  "dependencies": {
    "airbrake": "~0.3.8",
    "angular": "^1.4.3",
    "angular-bootstrap": "^0.12.0",
    "angular-cache": "~4.3.1",
    "angular-gravatar": "~0.3.2",
    "angular-jwt": "~0.0.9",
    "angular-loading-bar": "^0.8.0",
    "angular-resource": "^1.4.3",
    "angular-sanitize": "^1.4.3",
    "angular-translate": "^2.7.2",
    "angular-ui-router": "~0.2.15",
    "browserify": "^11.0.1",
    "browserify-ngannotate": "^1.0.1",
    "browserify-shim": "^3.8.10",
    "clean-css": "^3.3.5",
    "express": "^4.13.1",
    "font-awesome": "^4.3.0",
    "fs-extra": "^0.22.0",
    "glob": "^5.0.13",
    "jscs": "^2.0.0",
    "jshint": "^2.8.0",
    "jshint-stylish": "^2.0.1",
    "less": "^2.5.1",
    "less-plugin-autoprefix": "^1.4.2",
    "mi24-bootstrap": "^0.3.1",
    "newrelic": "~1.21.1",
    "ui-select": "^0.11.2"
  },
  "devDependencies": {
    "angular-mocks": "^1.4.3",
    "browserify-istanbul": "^0.2.1",
    "codacy-coverage": "^1.1.2",
    "david": "^6.1.6",
    "jasmine-core": "^2.3.4",
    "karma": "^0.13.3",
    "karma-browserify": "^4.2.1",
    "karma-coverage": "0.4.2",
    "karma-jasmine": "^0.3.6",
    "karma-phantomjs-launcher": "^0.2.0",
    "watch": "^0.16.0"
  },
  "scripts": {
    "preinstall": "npm cache clean && npm install bower",
    "postinstall": "npm run build",
    "start": "node serve.js",
    "build": "npm run build:scripts && npm run build:css && npm run build:copy && npm run jscs && npm run lint",
    "build:scripts": "browserify src/app.js -o web/js/app.js",
    "build:css": "lessc --autoprefix='last 2 versions,ie 9' src/media/less/style.less  web/media/css/style.css && cleancss --source-map -o web/media/css/style.min.css web/media/css/style.css",
    "build:copy": "npm run build:copy-i18n && npm run build:copy-views && npm run build:copy-fonts",
    "build:copy-i18n": "node scripts/copy.js src/**/translations/*.json web/i18n/",
    "build:copy-views": "node scripts/copy.js src/**/views/*.html web/views/",
    "build:copy-fonts": "mkdir -p web/media/fonts && cp -R node_modules/font-awesome/fonts/* web/media/fonts",
    "build-dev": "npm run build-dev:scripts && npm run build:css && npm run build:copy && npm run jscs && npm run lint",
    "build-dev:scripts": "browserify -d src/app.js -o web/js/app.js",
    "jscs": "jscs ./src ./tests ./scripts",
    "lint": "jshint ./src ./tests ./scripts --reporter node_modules/jshint-stylish/index.js",
    "test": "export CODACY_REPO_TOKEN='6d0c32dbb8fe4543bee90b3b20c1d2e5' && npm run test:karma && cat ./coverage/**/lcov.info | ./node_modules/codacy-coverage/bin/codacy-coverage.js",
    "test:karma": "./node_modules/karma/bin/karma start karma.config.js",
    "watch": "npm run watch:copy & npm run watch:css & npm run watch:scripts",
    "watch:copy": "watch 'npm run build:copy' src/",
    "watch:css": "watch 'npm run build:css' src/media/less",
    "watch:scripts": "watch 'npm run build:scripts' src/"
  }
}
